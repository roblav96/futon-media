{
	"compilerOptions": {
		"baseUrl": ".",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"lib": ["esnext"],
		"module": "commonjs",
		"outDir": "dist",
		"paths": { "@/*": ["src/*"] },
		"skipLibCheck": true,
		"sourceMap": true,
		"target": "es2017"
	},
	"exclude": ["dist", "node_modules"],
	"include": ["src/**/*.d.ts", "src/**/*.ts"]
}
